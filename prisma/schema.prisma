generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider  = "postgresql"
  url       = env("DATABASE_URL")
  directUrl = env("DIRECT_URL")
}

enum Role {
  SUPERADMIN
  ADMIN
  USER
}

model Organization {
  id                        String     @id @default(uuid())
  name                      String
  slug                      String?    @unique
  businessCategories        String[]   @default([])
  address                   String?
  gstNumber                 String?
  businessRegistrationCert  String?    // URL to uploaded certificate
  agreementDocument         String?    // URL to uploaded agreement
  createdAt                 DateTime   @default(now()) @map("created_at")
  updatedAt                 DateTime   @default(now()) @updatedAt @map("updated_at")
  users                     User[]
  products                  Product[]
  orders                    Order[]
  categories                Category[]

  @@map("organizations")
}

model User {
  id             String        @id @default(uuid())
  email          String?       @unique
  phone          String?       @unique
  password       String?       // Hashed password for admin/superadmin accounts
  name           String?
  role           Role          @default(USER)
  organizationId String?       @map("organization_id")
  organization   Organization? @relation(fields: [organizationId], references: [id])
  createdAt      DateTime      @default(now()) @map("created_at")
  orders         Order[]

  @@map("users")
}

model Category {
  id             String        @id @default(uuid())
  name           String
  slug           String
  image          String?       // URL to category image
  parentId       String?       @map("parent_id")
  parent         Category?     @relation("CategoryHierarchy", fields: [parentId], references: [id])
  children       Category[]    @relation("CategoryHierarchy")
  organizationId String?       @map("organization_id")
  organization   Organization? @relation(fields: [organizationId], references: [id])
  products       Product[]
  createdAt      DateTime      @default(now()) @map("created_at")
  updatedAt      DateTime      @updatedAt @map("updated_at")

  @@unique([slug, organizationId])
  @@map("categories")
}

model Section {
  id        String   @id @default(uuid())
  title     String
  type      String   // BANNER, PRODUCT_GRID, CATEGORY_GRID, etc.
  order     Int      @default(0)
  settings  Json?    // Flexible config: { "bannerUrl": "...", "categoryId": "..." }
  isEnabled Boolean  @default(true) @map("is_enabled")
  createdAt DateTime @default(now()) @map("created_at")
  updatedAt DateTime @updatedAt @map("updated_at")

  @@map("sections")
}

model Product {
  id             String        @id @default(uuid())
  title          String
  slug           String        @unique
  description    String?
  price          Decimal       @db.Decimal(10, 2)
  compareAtPrice Decimal?      @map("compare_at_price") @db.Decimal(10, 2)
  images         String[]
  videos         String[]      @default([])
  postalCodes    String[]      @default([]) @map("postal_codes") // Deliverable postal codes
  categoryId     String?       @map("category_id")
  category       Category?     @relation(fields: [categoryId], references: [id])
  organizationId String?       @map("organization_id")
  organization   Organization? @relation(fields: [organizationId], references: [id])
  createdAt      DateTime      @default(now()) @map("created_at")
  updatedAt      DateTime      @default(now()) @updatedAt @map("updated_at")
  orderItems     OrderItem[]

  @@map("products")
}

model Order {
  id             String        @id @default(uuid())
  userId         String        @map("user_id")
  organizationId String?       @map("organization_id")
  total          Decimal       @db.Decimal(10, 2)
  status         String        @default("pending")
  createdAt      DateTime      @default(now()) @map("created_at")
  user           User          @relation(fields: [userId], references: [id])
  organization   Organization? @relation(fields: [organizationId], references: [id])
  items          OrderItem[]

  @@map("orders")
}

model OrderItem {
  id        String  @id @default(uuid())
  orderId   String  @map("order_id")
  productId String  @map("product_id")
  quantity  Int
  price     Decimal @db.Decimal(10, 2)
  order     Order   @relation(fields: [orderId], references: [id])
  product   Product @relation(fields: [productId], references: [id])

  @@map("order_items")
}

